@model IdentityServer3.Core.ViewModels.LoginViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

asdfasdfadfasdf
<div class="container">
    <div class="page-header">
        <h1>
            <small ng-show="clientName"><strong>
                @Model.ClientName
            </strong> is asking you to login</small>
        </h1>
    </div>
</div>

<div class='container page-login'>
    <div class="page-header">
        <h1>Login</h1>
    </div>
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <div class="alert alert-danger">
                <strong>Error:</strong>
                @*@Model.ErrorMessage*@
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 col-sm-6">
            <div class="panel panel-default">

                <div class="panel-body">
                    <form method="POST" action="@Model.LoginUrl">
                        @Html.AntiForgeryToken()
                        <fieldset>
                            <div class="form-group">
                                <label for="username">Username</label>
                                <input required name="username" autofocus id="username" type="text" class="form-control" placeholder="Username" maxlength="100">
                            </div>
                            <div class="form-group">
                                <label for="password">Password</label>
                                <input required id="password" name="password" type="password" class="form-control" placeholder="Password" maxlength="100" autocomplete="off">
                            </div>
                            <div class="form-group login-remember" ng-show="model.allowRememberMe">
                                <label for="rememberMe">
                                    <input type="checkbox" id="rememberMe" name="rememberMe" value="true">
                                    <strong>Remember My Login</strong>
                                </label>
                            </div>
                            <div class="form-group">
                                <button class="btn btn-primary">Login</button>
                            </div>
                        </fieldset>
                    </form>
               
                </div>
                <ul class="list-unstyled">
                    @*<li ng-repeat="link in model.additionalLinks"><a ng-href="{{link.href}}">{{link.text}}</a></li>*@
                </ul>
            </div>
        </div>
      
    </div>
</div>