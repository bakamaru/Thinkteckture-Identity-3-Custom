@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Open Identity</h1>
    <p class="lead">Demonstration of Sports pass OpenID Connect</p>
</div>
<div class="row">
    <div class="col-md-10">
        <h3>Identity</h3>
        @if (User.Identity.IsAuthenticated)
        {
            <p>
                <dl>
                    @foreach (var claim in System.Security.Claims.ClaimsPrincipal.Current.Claims)
                    {
                        <dt>@claim.Type</dt>
                        <dd>@claim.Value</dd>
                    }
                </dl>
            </p>
        }
        else
        {
            <p>
                Login First!.
            </p>
        }
    </div>



    <button class="my_popup_open">Login with Popup</button>

</div>
